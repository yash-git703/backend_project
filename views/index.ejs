<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Dashboard</title>
  <style>
    /* General Body Styling */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f7f9;
      margin: 0;
      padding: 0;
    }

    /* Main Dashboard Container */
    .dashboard {
      width: 80%;
      margin: 50px auto;
      background-color: white;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }

    /* Dashboard Title */
    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 30px;
      font-size: 28px;
    }

    /* Search Bar Container */
    .search-bar {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .search-bar input {
      width: 80%;
      padding: 10px;
      font-size: 16px;
      border: 2px solid #ddd;
      border-radius: 4px;
    }

    .search-bar button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .search-bar button:hover {
      background-color: #45a049;
    }

    /* Table Styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #007BFF;
      color: white;
    }

    /* Alternate Row Colors */
    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    tr:nth-child(odd) {
      background-color: #e9ecef;
    }

    /* Hover Effect on Rows */
    tr:hover {
      background-color: #ddd;
    }

    /* Box-shadow effect for the table */
    table {
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    /* Buttons in Action Column */
    .actions button {
      padding: 8px 12px;
      margin: 0 5px;
      font-size: 14px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .actions .update {
      background-color: #FFC107;
      color: white;
    }

    .actions .delete {
      background-color: #DC3545;
      color: white;
    }

    .actions .update:hover {
      background-color: #e0a800;
    }

    .actions .delete:hover {
      background-color: #c82333;
    }

    /* Add Book Button Styling */
    .add-button {
      text-align: right;
    }

    .add-button a {
      text-decoration: none;
      padding: 10px 20px;
      background-color: #007BFF;
      color: white;
      border-radius: 4px;
    }

    .add-button a:hover {
      background-color: #0056b3;
    }

    /* Mobile Responsiveness */
    @media screen and (max-width: 768px) {
      .dashboard {
        width: 95%;
        margin: 20px auto;
      }

      h1 {
        font-size: 24px;
        margin-bottom: 20px;
      }

      .search-bar {
        flex-direction: column;
        align-items: center;
      }

      .search-bar input {
        width: 100%;
        margin-bottom: 10px;
      }

      .search-bar button {
        width: 100%;
        font-size: 14px;
      }

      table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }

      th, td {
        font-size: 14px;
        padding: 8px;
      }

      .actions button {
        padding: 6px 10px;
        font-size: 12px;
      }

      .add-button {
        text-align: center;
        margin-top: 20px;
      }

      .add-button a {
        display: inline-block;
        width: 100%;
        padding: 10px;
      }
    }

    @media screen and (max-width: 480px) {
      h1 {
        font-size: 20px;
      }

      th, td {
        font-size: 12px;
        padding: 6px;
      }

      .search-bar button {
        font-size: 12px;
        padding: 8px;
      }

      .actions button {
        padding: 5px 8px;
        font-size: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard">
    <h1>Library Dashboard</h1>

    <!-- Search Bar -->
    <div class="search-bar">
      <input type="text" placeholder="Search by ID or Title" id="searchInput">
      <button>Search</button>
    </div>

    <!-- Table of Books -->
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Genre</th>
          <th>Available Copies</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(book => { %>
        <tr>
          <td><%= book._id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.genre %></td>
          <td><%= book.availableCopies %></td>
          <td class="actions">
            <button class="update" onclick="window.location.href='/update/<%= book._id %>'">Update</button>
            <form action="/delete/<%= book._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="delete">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Add Book Button -->
    <div class="add-button">
      <a href="/add">Add Book</a>
    </div>
  </div>
</body>
</html>
